#!/bin/sh
set -e

absoluteIpsecConfPath="/etc/ipsec.conf"
leftsubnet=$1
sed -i 's@'$leftsubnet'@@g' $absoluteIpsecConfPath
sed -i 's@[,]\{2,\}@,@g' $absoluteIpsecConfPath
sed -i 's@=,@=@g' $absoluteIpsecConfPath
sed -i 's@,$@@g' $absoluteIpsecConfPath

# Agent container configuration mapper
SYNCRONIZED_DIR="/etc/ipsec.d"
mkdir -p $SYNCRONIZED_DIR
yes | cp -f $absoluteIpsecConfPath $SYNCRONIZED_DIR/"ipsec.conf"

ipsec restart
